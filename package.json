{
  "name": "react-lib",
  "version": "0.0.1",
  "author": "Tyler Knipfer <knipferrc@gmail.com>",
  "description": "React and typescript library starter kit",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knipferrc/react-lib.git"
  },
  "bugs": {
    "url": "https://github.com/knipferrc/react-lib/issues"
  },
  "keywords": [
    "react",
    "typescript",
    "styled-components",
    "library"
  ],
  "scripts": {
    "build": "microbundle --jsx react --globals react=React,styled-components=styled --format cjs",
    "dev": "microbundle watch --jsx react --globals react=React,styled-components=styled --format cjs",
    "format": "prettier --write \"**/*.{tsx,ts,css,scss,md,js,json,html}\""
  },
  "dependencies": {
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "@types/styled-components": "^4.1.12",
    "microbundle": "^0.11.0",
    "prettier": "^1.16.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "peerDependencies": {
    "react": "^16.8.5",
    "react-dom": "^16.8.5"
  }
}
